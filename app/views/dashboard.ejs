<!DOCTYPE html>
<html>
<head>
    <title>GameWatcher Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">GameWatcher</a>
            <span class="navbar-text">
                Welcome, <%= user.username %>
            </span>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <% guilds.forEach(function(guild) { %>
                        <a href="#" class="list-group-item list-group-item-action guild-item" data-guild-id="<%= guild.id %>">
                            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>" class="img-thumbnail" style="width: 30px; height: 30px;">
                            <%= guild.name %>
                        </a>
                    <% }); %>
                </div>
            </div>
            <div class="col-md-9">
                <div id="gamesContainer">
                    <h2>Select a server to manage games</h2>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/dashboard.js"></script>
</body>
</html>